<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:PrismApp1"
             xmlns:converters="clr-namespace:Shop.Converters"
             x:Class="Shop.App">


  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
        <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>


    <converters:CardNumberToImageConverter x:Key="CardNumberToImageConverter"
                                             MasterCard="logo_mastercard.png"
                                             Visa="logo_visa.png"
                                             Unknown="card_unknow.png" />


  </Application.Resources>
</Application>
